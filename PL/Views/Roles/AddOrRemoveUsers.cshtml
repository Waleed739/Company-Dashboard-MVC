@model List<UserInRoleVM>

@{
    ViewData["Title"] = "Add or Remove Users";
    var RoleId = ViewBag.RoleId;
}

<h2>Add or Remove Users</h2>
<form class="my-3" asp-action="AddOrRemoneUsers" asp-route-roleid="@RoleId">
    @for(var i=0; i<Model.Count(); i++)
    {
        <div class="form-group">
            <input asp-for="@Model[i].IsSelected"/>
            <label asp-for="@Model[i].IsSelected">@Model[i].UserName</label>

        </div>
            <input type="hidden" asp-for="@Model[i].UserId"/>
            <input type="hidden" asp-for="@Model[i].UserName" />

    }
    <div class="my-3">
        <input type="submit" value="Update" class="btn btn-success" />
        <a asp-action="Edit" asp-controller="Roles" asp-route-id="@RoleId"class="btn btn-light">Cancel</a>
    </div>
</form>
