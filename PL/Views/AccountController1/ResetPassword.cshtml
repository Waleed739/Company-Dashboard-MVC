@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="ResetPassword">
            <div asp-validation-summary="All"></div>
            <input asp-for="Email" type="hidden" />
            <input asp-for="Token" type="hidden" />
            <input class="text" type="Password" asp-for="PassWord" placeholder="Password" required="" />
            <input class="text w3lpass" type="Password" asp-for="ConfirmPassWord" placeholder="Confirm Password" required="" />
            <input type="submit" value="ResetPassword"
        </form>
    </div>
</div>