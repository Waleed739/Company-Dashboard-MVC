@if(Model?.Count()>0)
{
    <table class="table table-stripped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(M=>M.Name)</th>
                <th>@Html.DisplayNameFor(M=>M.Image)</th>
                <th>@Html.DisplayNameFor(M=>M.Address)</th>
                <th>@Html.DisplayNameFor(M=>M.Email)</th>
                <th>@Html.DisplayNameFor(M=>M.Salary)</th>
                <th>@Html.DisplayNameFor(M=>M.DateOfHiring)</th>
                <th>Details</th>
                <th>Delete</th>
                <th>Update</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayNameFor(m=>item.Name)</td>
                    <td>
                        <img src="~/Files/Images/@item.ImagePath" class="img-circle" height="40" width="40" alt="Employee Image"/>
                    </td>
                    <td>@Html.DisplayNameFor(m=>item.Address)</td>
                    <td>@Html.DisplayNameFor(m=>item.Email)</td>
                    <td>@Html.DisplayFor(m=>item.Salary)</td>
                    <td>@Html.DisplayFor(m=>item.DateOfHiring.Day)-@Html.DisplayFor(m=>item.DateOfHiring.Month)-@Html.DisplayFor(m=>item.DateOfHiring.Year)</td>
                    <td>
                        <a class="btn btn-success" asp-controller="Employee" asp-action="Dtails" asp-route-id="@item.Id">
                            <i class="fas fa-eye"></i>Details
                        </a>
                    </td>
                     <td>
                        <a class="btn btn-success" asp-controller="Employee" asp-action="Update" asp-route-id="@item.Id">
                            <i class="fas fa-eye"></i>Update
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-success" asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-eye"></i>Delete
                        </a>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h4>No Employees Found!!</h4>
    </div>
}